<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".About" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/largebck2" />
    
	    <ScrollView
	        android:id="@+id/scrollView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/lower"
	        android:layout_alignParentTop="true" >
	
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <Button
	                android:id="@+id/button1"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentTop="true"
	                android:layout_marginBottom = "5dp"
	                android:onClick="playPod" />
	
	            <Button
	                android:id="@+id/button2"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_below="@+id/button1"
	                 android:layout_marginBottom = "5dp"
	                android:onClick="playPod" />
	
	            <Button
	                android:id="@+id/button3"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentLeft="true"
	                android:layout_below="@+id/button2"
	                 android:layout_marginBottom = "5dp"
	                android:onClick="playPod" />
	
	            <Button
	                android:id="@+id/button4"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/button3"
	                android:layout_below="@+id/button3"
	                android:layout_marginBottom = "5dp"
	                android:onClick="playPod" />
	
	            <Button
	                android:id="@+id/button5"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/button4"
	                android:layout_below="@+id/button4"
	                 android:layout_marginBottom = "5dp"
	                android:onClick="playPod" />
	
	            <Button
	                android:id="@+id/button6"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_below="@+id/button5"
	                android:layout_centerHorizontal="true"
	                 android:layout_marginBottom = "5dp"
	                android:onClick="playPod" />
	
	            <Button
	                android:id="@+id/button7"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/button6"
	                android:layout_below="@+id/button6"
	                 android:layout_marginBottom = "5dp"
	                android:onClick="playPod"/>
	
	            <Button
	                android:id="@+id/button8"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/button7"
	                android:layout_below="@+id/button7"
	                 android:layout_marginBottom = "5dp"
	                 android:onClick="playPod"/>
	
	            <Button
	                android:id="@+id/button9"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignLeft="@+id/button8"
	                android:layout_below="@+id/button8"
	                 android:layout_marginBottom = "5dp"
	                android:onClick="playPod"/>
	            
	             <Button
			        android:id="@+id/button10"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/button9"
			        android:layout_alignLeft="@+id/button9"
			        android:layout_marginBottom = "5dp"
			        android:onClick="playPod" />
	             
	             <Button
			        android:id="@+id/button11"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/button10"
			        android:layout_alignLeft="@+id/button10"
			        android:layout_marginBottom = "5dp"
			        android:onClick="playPod" />
	             
	              <Button
			        android:id="@+id/button12"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/button11"
			        android:layout_alignLeft="@+id/button11"
			        android:layout_marginBottom = "5dp"
			        android:onClick="playPod" />
	              
	               <Button
			        android:id="@+id/button13"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/button12"
			        android:layout_alignLeft="@+id/button12"
			        android:layout_marginBottom = "5dp"
			        android:onClick="playPod" />
	               
	                <Button
			        android:id="@+id/button14"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/button13"
			        android:layout_alignLeft="@+id/button13"
			        android:layout_marginBottom = "5dp"
			        android:onClick="playPod" />
	                
	                 <Button
			        android:id="@+id/button15"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/button14"
			        android:layout_alignLeft="@+id/button14"
			        android:layout_marginBottom = "5dp"
			        android:onClick="playPod" />
	                 
	                <Button
			        android:id="@+id/button16"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/button15"
			        android:layout_alignLeft="@+id/button15"
			        android:layout_marginBottom = "5dp"
			        android:onClick="playPod" />
	                
	                 <Button
			        android:id="@+id/button17"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/button16"
			        android:layout_alignLeft="@+id/button16"
			        android:layout_marginBottom = "5dp"
			        android:onClick="playPod" />
	                 
	                 
	                 <Button
			        android:id="@+id/button18"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/button17"
			        android:layout_alignLeft="@+id/button17"
			        android:layout_marginBottom = "5dp"
			        android:onClick="playPod" />
	                 
	                 
	                 <Button
			        android:id="@+id/button19"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/button18"
			        android:layout_alignLeft="@+id/button18"
			        android:layout_marginBottom = "5dp"
			        android:onClick="playPod" />
	                 
	                 <Button
			        android:id="@+id/button20"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/button19"
			        android:layout_alignLeft="@+id/button19"
			        android:layout_marginBottom = "5dp"
			        android:onClick="playPod" />
	        </RelativeLayout>
	    </ScrollView>

	    <RelativeLayout
	        android:id="@+id/lower"
	        android:layout_width="wrap_content"
	        android:layout_height="70dp"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true" >

		        <ImageButton
		            android:id="@+id/playPause"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentBottom="true"
		            android:layout_alignParentLeft="true"
		            android:background="@drawable/podplay"
		            android:contentDescription="@drawable/podplay" 
		            android:onClick="imageButtonController"/>
				
		        <SeekBar
		            android:id="@+id/seekBar1"
		            android:layout_width="160dp"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_alignTop="@+id/playPause"
		            android:layout_marginTop="14dp"
		            android:layout_toRightOf="@+id/playPause" />

		 		<TextView
			        android:id="@+id/duration"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/seekBar1"
			        android:layout_toLeftOf = "@+id/total"
			        />
		 		
		 		<TextView
			        android:id="@+id/total"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_below="@+id/seekBar1"
			        android:layout_alignParentRight = "true"
			        />

		 		<ProgressBar
		 		    android:id="@+id/buffer"
		 		    style="?android:attr/progressBarStyleSmall"
		 		    android:layout_width="wrap_content"
		 		    android:layout_height="wrap_content"
		 		    android:layout_below="@+id/seekBar1"
		 		    android:layout_centerHorizontal="true" />

	    </RelativeLayout>

	   

</RelativeLayout>